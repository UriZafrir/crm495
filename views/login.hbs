{{>authorization_head}}

<div class="container">
    <label class="error_message">{{message}}</label><br /><br />
    <form action="/login" method="post">
        <div class="form-group">
            <label for="username">Логин</label>
            <input class="form-control col-3" id="username" name="username" placeholder="Введите логин">
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" class="form-control col-3" id="password" name="password" placeholder="Введите пароль">
        </div>
        <button class="btn btn-primary">Войти</button>
    </form>
</div>