{{>main_head}}

<div class="container site-main">
    <form action="/contractors/edit" method="post">
        <input type="hidden" name="id" value="{{contractor.id}}">
        <div class="form-group">
            <label for="contractor_name">Имя</label>
            <input class="form-control" name="contractor_name" id="contractor_name" value="{{contractor.name}}">
        </div>
        <div class="form-group">
            <label for="group_id">Группа</label>
            {{#each contractor_group_list}}
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="contractor_group_id" value="{{this.id}}" {{#ifCond this.id ../contractor.contractor_group_id}}checked{{/ifCond}}>
                        {{this.name}}
                    </label>
                </div>
            {{/each}}
        </div>
        <div class="form-group">
            <label for="contact_phone">Телефон</label>
            <input class="form-control col-2" name="contact_phone" value="{{contractor.contact_phone}}" id="contact_phone">
        </div>
        <div class="form-group">
            <label for="contact_address">Адрес</label>
            <input class="form-control" name="contact_address" value="{{contractor.contact_address}}" id="contact_address">
        </div>
        <button class="btn btn-primary">Сохранить</button>
    </form>
</div>