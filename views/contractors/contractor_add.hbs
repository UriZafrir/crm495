{{>main_head}}

<div class="container site-main">
    <form action="/contractors/add" method="post">
        <div class="form-group">
            <label for="contractor_name">Имя</label>
            <input class="form-control" name="contractor_name" id="contractor_name">
        </div>
        <div class="form-group">
            <label for="contractor_group_id">Группа</label>
            {{#each contractor_group_list}}
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="contractor_group_id" value="{{this.id}}" checked>
                        {{this.name}}
                    </label>
                </div>
            {{/each}}
        </div>
        <button class="btn btn-primary">Сохранить</button>
    </form>
</div>