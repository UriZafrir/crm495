{{>main_head}}

<div class="container site-main">
    <form action="/products/add" method="post">
        <div class="form-group">
            <label for="product_name">Название</label>
            <input class="form-control" name="product_name" id="product_name">
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" value="FALSE" name="service" checked>Продукт
            </label>
            <label class="form-check-label">
                <input class="form-check-input" type="radio" value="TRUE" name="service">Услуга
            </label>
        </div>
        <div class="form-group">
            <label for="price">Цена</label>
            <input class="form-control col-md-2" type="number" name="price" id="price">
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" value="TRUE" name="show_to_public" checked>Показывать на публичном сайте
            </label>
        </div>
        <div class="form-group">
            <label for="product_group_id">Группа</label>
            {{#each product_group_list}}
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="product_group_id" value="{{this.id}}" checked>
                        {{this.name}}
                    </label>
                </div>
            {{/each}}
        </div>
        <button class="btn btn-primary">Сохранить</button>
    </form>
</div>